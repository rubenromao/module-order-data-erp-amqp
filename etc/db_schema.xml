<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="custom_order_api_erp_status" resource="default" engine="innodb" comment="ERP API call response">
        <column xsi:type="int" name="order_id" default="0" nullable="true" comment="Order ID"/>
        <column xsi:type="timestamp" name="timestamp" default="CURRENT_TIMESTAMP" on_update="true" comment="ERP API call timestamp"/>
        <column xsi:type="int" name="code" default="999" nullable="true" comment="Returned API code"/>
    </table>
</schema>
